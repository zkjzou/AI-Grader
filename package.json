{
	"devDependencies": {
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"lint-staged": "^16.2.1",
		"husky": "^9.1.7"
	},
	"scripts": {
		"lint": "next lint",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:ui": "playwright test"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,md,css}": ["prettier --write"]
	}
}
